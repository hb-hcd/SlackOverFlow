@model NotQuora.Models.Answer

@{
    ViewData["Title"] = "editAnswer";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/ckeditor/ckeditor.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<h1>edit Answer</h1>

<div>
    <h4>Answer</h4>
    <hr />
    <form asp-action="editAnswer" asp-route-aid="@Model?.Id" asp-route-uid="@ViewBag.uid">
        <div class="form-group">
            Content:
            <textarea asp-for="Content" id="Content" class="ckeditor" name="Content" rows="200">@Model.Content</textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </form>



</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>


<script>
    $(document).ready(function () {
        CKEDITOR.replace('#Content');
    });
</script>